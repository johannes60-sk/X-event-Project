<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#282C33"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Explorer a proximite"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridLayoutAProximite"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4">

            <!-- CARD 1-->

            <androidx.cardview.widget.CardView
                android:id="@+id/list_View_Chateau"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2-->

            <androidx.cardview.widget.CardView
                android:id="@+id/list_view_parc"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Parcs"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3-->

            <androidx.cardview.widget.CardView
                android:id="@+id/list_view_musée"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Musée"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4  -->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nos destinations favorites"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4">

            <!-- CARD 1-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/block_destination_fav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/block_destination_fav_image"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Lieux ajoute"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4">

            <!-- CARD 1-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:id="@+id/textChateaux"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="165dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>
    </LinearLayout>   <!-- Main menu-->

    </ScrollView>


