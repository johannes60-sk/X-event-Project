<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/back______"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Grand Est"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <androidx.drawerlayout.widget.DrawerLayout
            android:layout_width="151dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:backgroundTint="#C778DD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Voir sur la carte"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </androidx.drawerlayout.widget.DrawerLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="catÃ©gories"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4">

            <!-- CARD 1-->

            <androidx.cardview.widget.CardView
                android:id="@+id/list_View_Chateau"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="#282C33"
                app:cardElevation="50dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="4dp"
                app:cardElevation="50dp"
                android:backgroundTint="#282C33"
                app:cardCornerRadius="8dp">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="#282C33"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 4  -->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="#282C33"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="Les incontournables de la region"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_margin="8dp"
            android:columnCount="4"
            android:rowCount="4">

            <!-- CARD 1-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="4dp"
                android:backgroundTint="#282C33"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2-->

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="4dp"
                android:backgroundTint="#282C33"
                app:cardCornerRadius="8dp">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/chateaux" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Chateaux"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_nav_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </LinearLayout>

</ScrollView>